<div class="mt-2" data-image-gallery-root>
    <% @images.each_slice(2).each do |chunk| %>
        <div class="flex w-full mt-2">
            <% chunk.each do |image| %>
                <div class="flex-col mr-2 relative">
                    <% unless image[:alt].blank? %>
                        <div class="absolute bottom-1 left-1 z-10 p-1 font-bold bg-black bg-opacity-75 text-white text-xs rounded cursor pointer-events-none">
                            ALT
                        </div>
                    <% end %>

                    <img
                        class="max-w-sm max-h-64 rounded cursor-pointer object-contain"
                        src="https://bsky-image-proxy.webscalesoftware.ltd/bsky.social/<%= @did %>/<%= image[:image][:ref][:$link] %>?w=1024"
                        loading="lazy"
                        alt="<%= image[:alt] %>"
                        tabindex="0"
                        data-controller="photo-frame"
                        data-image-gallery-item
                    />
                </div>
            <% end %>
        </div>
    <% end %>
</div>
