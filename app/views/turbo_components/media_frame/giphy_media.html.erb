<turbo-frame id="<%= params[:frame_id] %>">
    <div class="mt-4">
        <img loading="lazy" alt="<%= @media_alt %>" class="h-48" src="<%= @media_url %>" />

        <p class="mt-3">
            <a href="<%= @giphy_url %>" target="_blank" rel="noopener noreferrer" class="unstyled">
                <%= icon 'fa-solid', 'link' %> View on Giphy
            </a>
        </p>
    </div>
</turbo-frame>
