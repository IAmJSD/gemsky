<div class="mx-auto y-full">
    <h1 class="text-2xl font-bold text-center">
        Gemsky
    </h1>

    <ul class="text-xl">
        <li class="my-6 <% if @highlights == :home %> font-bold <% end %>">
            <a href="/home/<%= @bluesky_user.did %>" class="unstyled">
                <%= icon 'fa-solid', 'house' %> <span class="ml-2">
                    Home
                </span>
            </a>
        </li>

        <li class="my-6 <% if @highlights == :notifications %> font-bold <% end %>">
            <a href="/home/<%= @bluesky_user.did %>/notifications" class="unstyled">
                <% if user.stovey_mode %>
                    <%= image_tag("/stovey.png", alt: "stovey", class:"rounded-full object-scale-down") %>
                <% else %>
                    <%= icon 'fa-solid', 'bell' %>
                <% end %>
                <span class="ml-2">
                    Notifications
                </span>
            </a>
        </li>

        <li class="my-6 <% if @highlights == :settings %> font-bold <% end %>">
            <a href="/home/<%= @bluesky_user.did %>/settings" class="unstyled">
                <%= icon 'fa-solid', 'cog' %> <span class="ml-2">
                    Settings
                </span>
            </a>
        </li>
    </ul>

    <%= render DividerComponent.new %>

    <form class="mt-4 text-center" data-controller="composer">
        <%= render ButtonComponent.new(
            name: 'submit',
            label: 'Compose Skeet',
            type: 'submit',
            icon: 'feather',
            full_width: true,
        ) %>
    </form>

    <form class="mt-5" data-controller="dialog-toggle" aria-controls="user_switch_modal">
        <button type="submit">
            <div class="flex" data-controller="twemoji">
                <div class="flex-col min-w-fit">
                    <img
                        class="w-12 h-12 rounded-full"
                        src="<%= @profile['avatar'] ? @profile['avatar'] : '/default_pfp.png' %>"
                        loading="lazy"
                        alt=""
                    />
                </div>

                <div class="flex-col ml-3 my-auto text-left">
                    <h3 class="text-lg font-medium">
                        <%= @profile['displayName'] %>
                    </h3>
                    <p class="text-sm">
                        <%= @profile['handle'] %>
                    </p>
                </div>
            </div>
        </button>
    </form>
</div>
